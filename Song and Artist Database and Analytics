--Which songs are from the artist Queen?

Select title FROM songs where artist = "Queen";

--Which artist are in the Pop genre?

Select name from artists where genre = "Pop";

--Which songs are from artist in the Pop genre?

Select title from songs where artist IN (Select name from artists where genre = "Pop");

--How many songs are from Celine Dion?

Select count(artist)
From songs Where artist = 'Celine Dion';

--How many artist are from the US?

Select count(country)
From artistS
Where country = 'US';

--How many artist are not from the US?

Select count(country)
From artistS
Where country <> 'US';


