SELECT * FROM Chocolate;

CREATE TABLE Brands (id INTEGER PRIMARY KEY, brand TEXT);

INSERT INTO Brands VALUES (1, 'Lindt');
INSERT INTO Brands VALUES (2, 'Hershey');
